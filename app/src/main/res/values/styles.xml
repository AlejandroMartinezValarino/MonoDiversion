<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">30sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">30sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.App.LabelSmall" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

</resources>